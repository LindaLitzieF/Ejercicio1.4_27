<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio14.MainPage">
    

    <StackLayout>
        <Frame BackgroundColor="Violet" 
               Padding="24" 
               CornerRadius="0">

            <Label Text="Ejercicio 1.4" 
                   HorizontalTextAlignment="Center" 
                   TextColor="White" 
                   FontSize="36"/>
            <Label Text="LINDA LITZIE FLORES RIVERA" 
                       HorizontalTextAlignment="Center" 
                       TextColor="White" 
                       FontSize="20"/>
        </Frame>
  

        <Image x:Name="foto" BackgroundColor="#fafaf7"
                   WidthRequest="100" HeightRequest="170" />

        <Button Text="Tomar foto" 
                x:Name="btnFoto"
                Clicked="btnFoto_Clicked"
                WidthRequest="300"
                HorizontalOptions="Center" 
                BackgroundColor="Violet" 
                TextColor="White"
                CornerRadius="5"
                Margin="15"/>

        <Frame BackgroundColor="#FFF" Padding="5" Margin="30,10,30,10" CornerRadius="4">
            <Entry x:Name="nom" Placeholder="Nombre" Keyboard="Text"/>
        </Frame>

        <Frame BackgroundColor="#FFF" Padding="5" Margin="30,10,30,10" CornerRadius="4">
            <Entry x:Name="des" Placeholder="Descripción" Keyboard="Text"/>
        </Frame>

        <Button Text="Guardar" 
                x:Name="btnGuardar"
                Clicked="btnGuardar_Clicked"
                WidthRequest="300"
                HorizontalOptions="Center" 
                BackgroundColor="Violet" 
                TextColor="White"
                CornerRadius="5"
                Margin="15"/>

        <Button Text="Lista" 
                x:Name="btnLista"
                Clicked="btnLista_Clicked"
                WidthRequest="300"
                HorizontalOptions="Center" 
                BackgroundColor="Violet" 
                TextColor="White"
                CornerRadius="5"
                Margin="10"/>

          


    </StackLayout>

</ContentPage>
